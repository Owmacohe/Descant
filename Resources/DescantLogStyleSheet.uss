:root {
    --descant-color-background: #2b2b2b;
    --descant-color-default: rgba(51, 51, 51, 0.4);
    --descant-color-light: rgba(51, 51, 51, 1);

    --choice-highlight: lightskyblue;
    --choice-background: rgba(90, 137, 166, 0.4);

    --response-highlight: darkgoldenrod;
    --response-background: rgba(164, 123, 19, 0.4);

    --start-highlight: mediumseagreen;
    --start-background: rgba(46, 134, 85, 0.4);

    --end-highlight: firebrick;
    --end-background: rgba(121, 23, 23, 0.4);

    --unsaved: lightcoral;
}

Toolbar {
    height: 40px;
    padding: 8px;
    
    align-items: center;
    justify-content: space-between;
}

Toolbar .toolbar-title {
    font-size: 18px;
}

Toolbar .log-section {
    flex-direction: row;
    align-items: center;
}

Toolbar Button {
    font-size: 13px;
    padding: 10px;
}

Toolbar Toggle {
    align-items: center;
}

Toolbar Toggle Label {
    min-width: 0;
    margin-left: 10px;

    font-size: 13px;
}

Toolbar Toggle VisualElement {
    margin: 2px;
}

Toolbar TextField {
    width: 80px;
}

Toolbar TextField Label {
    min-width: 15px;
    font-size: 13px;
}

Toolbar TextField TextElement {
    margin: 2px;
}

.log {
    height: 100%;
    
    padding: 10px;
    
    font-size: 15px;
    
    background-color: var(--descant-color-default);
}

.log TextElement {
    margin-bottom: 5px;
    padding: 5px;
}

.log-element-a { background-color: var(--descant-color-background); }
.log-element-b { background-color: var(--descant-color-light); }